<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="add-indexes-to-faculties.1" author="Ravishev Artem">
        <preConditions>
            <and>
                <tableExists tableName="faculties"/>
                <not>
                    <indexExists tableName="faculties" indexName="IDX_faculties_name_and_color"/>
                </not>
            </and>
        </preConditions>

        <createIndex tableName="faculties" indexName="IDX_faculties_name_and_color" unique="true">
            <column name="name"/>
            <column name="color"/>
        </createIndex>


    </changeSet>

</databaseChangeLog>
