<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="add-indexes-to-students.1" author="Ravishev Artem">
        <preConditions>
         <and>
             <tableExists tableName="students"/>
             <not>
             <indexExists tableName="students" indexName="IDX_students_name"/>
             </not>
         </and>
        </preConditions>

        <createIndex tableName="students" indexName="IDX_students_name">
            <column name="name"/>
        </createIndex>


    </changeSet>

</databaseChangeLog>
